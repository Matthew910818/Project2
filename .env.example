# Frontend environment variables
# OpenAI API key - used by both frontend and backend
REACT_APP_OPENAI_API_KEY="your-openai-api-key"
OPENAI_API_KEY="your-openai-api-key"

# Technical analysis alert criteria 
# These values can be adjusted to change notification sensitivity
REACT_APP_RSI_THRESHOLD=30
REACT_APP_STOCHASTIC_THRESHOLD=20
REACT_APP_USE_EMA_ALIGNMENT=true
REACT_APP_USE_MACD_POSITIVE=true

# Email configuration
REACT_APP_EMAIL_RECIPIENT=your-email@example.com

# Backend server configuration
PORT=4000
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDER_EMAIL="your-email@example.com"
RECIPIENT_EMAIL="your-email@example.com" 